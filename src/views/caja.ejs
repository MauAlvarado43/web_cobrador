<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="/css/master.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
    crossorigin="anonymous"></script>
  <script src="/js/JSEncrypt.js"></script>
  <script src="/js/script.js"></script>

  <title>Cobrador</title>
</head>

<body>

  <%- include("./components/nav", {url: url, user: user}) %>

    <section style="min-height: 80vh;">
      <div class="row m-0 mt-5 mb-5 justify-content-center">
        <h1 class="text-center">Caja de la sucursal</h1>
        <hr class="star-light">
        <div class="col-auto w-50 text-center mt-3">
          <h3 class="text-center mb-5">Total en la sucursal: $<%= amount %></h3>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registerEntryModal">Registrar ingreso</button>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registerEgressModal">Registrar egreso</button>
        </div>
      </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="registerEntryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="registerEntryModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="registerEntryModalLabel">Registrar ingreso</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="container">
              <div id="alertEntry"></div>
              <form>
                <div class="mb-3">
                  <label for="entryInput" class="form-label">Ingresa el ingreso</label>
                  <input type="number" class="form-control border" id="entryInput" aria-describedby="entryInputHelp">
                  <div id="entryInputHelp" class="form-text"></div>
                </div>
                <button type="button" class="btn btn-primary" onclick="registerEntry(event)">Registrar</button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


    <div class="modal fade" id="registerEgressModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="registerEgressModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="registerEgressModalLabel">Registrar egreso</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="container">
              <div id="alertEgress"></div>
              <form>
                <div class="mb-3">
                  <label for="egressInput" class="form-label">Ingresa el egreso</label>
                  <input type="number" class="form-control border" id="egressInput" aria-describedby="egressInputHelp">
                  <div id="egressInputHelp" class="form-text"></div>
                </div>
                <button type="button" class="btn btn-primary" onclick="registerEgress(event)">Registrar</button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <style>
      .form-text{
        color: red;
      }
    </style>

    <%- include("./components/footer") %>

</body>

</html>